<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">
    <Text
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:text="Organ Claim "
        ohos:text_size="28fp"
        ohos:text_color="#97E20000"
        ohos:background_element="#C8F1C41D"
        ohos:text_font="Railway"
        ohos:top_margin="120vp"
        ohos:left_margin="15vp"
        ohos:bottom_margin="15vp"
        ohos:right_padding="15vp"
        ohos:left_padding="15vp"
        />
    <TextField
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:left_margin="5vp"
        ohos:left_padding="15vp"
        ohos:text="Eg: Kidney,Eye  "
        ohos:bottom_margin="14vp"
        ohos:text_size="25fp"
        ohos:text_alignment="vertical_center"
        ohos:background_element="#97600D1D"
        ohos:text_color="#C8FFFC00"
        />
    <Text
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:text="Blood Type "
        ohos:text_size="28fp"
        ohos:text_color="#97E20000"
        ohos:background_element="#C8F1C41D"
        ohos:text_font="Railway"
        ohos:left_margin="15vp"
        ohos:bottom_margin="15vp"
        ohos:right_padding="15vp"
        ohos:left_padding="15vp"
        />
    <TextField
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:left_margin="5vp"
        ohos:left_padding="15vp"
        ohos:text="Eg: B+ve,B-ve  "
        ohos:bottom_margin="14vp"
        ohos:text_size="25fp"
        ohos:text_alignment="vertical_center"
        ohos:background_element="#97600D1D"
        ohos:text_color="#C8FFFC00"
        />
    <Text
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:text="Disease Suffering "
        ohos:text_size="28fp"
        ohos:text_color="#97E20000"
        ohos:background_element="#C8F1C41D"
        ohos:text_font="Railway"
        ohos:left_margin="15vp"
        ohos:bottom_margin="15vp"
        ohos:right_padding="15vp"
        ohos:left_padding="15vp"
        />
    <TextField
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:left_margin="5vp"
        ohos:left_padding="15vp"
        ohos:text="Eg: Kidney Stones  "
        ohos:bottom_margin="14vp"
        ohos:text_size="25fp"
        ohos:text_alignment="vertical_center"
        ohos:background_element="#97600D1D"
        ohos:text_color="#C8FFFC00"
        />
    <Text
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:text="Medical Report "
        ohos:text_size="28fp"
        ohos:text_color="#97E20000"
        ohos:background_element="#C8F1C41D"
        ohos:text_font="Railway"
        ohos:left_margin="15vp"
        ohos:bottom_margin="15vp"
        ohos:right_padding="15vp"
        ohos:left_padding="15vp"
        />
    <TextField
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:left_margin="5vp"
        ohos:left_padding="15vp"
        ohos:text="Upload the document  "
        ohos:bottom_margin="14vp"
        ohos:text_size="25fp"
        ohos:text_alignment="vertical_center"
        ohos:background_element="#97600D1D"
        ohos:text_color="#C8FFFC00"
        />
    <Text
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:text="Local Hospital Name  "
        ohos:text_size="28fp"
        ohos:text_color="#97E20000"
        ohos:background_element="#C8F1C41D"
        ohos:text_font="Railway"
        ohos:left_margin="15vp"
        ohos:bottom_margin="15vp"
        ohos:right_padding="15vp"
        ohos:left_padding="15vp"
        />
    <TextField
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:left_margin="5vp"
        ohos:left_padding="15vp"
        ohos:text="Enter your nearby hospital  "
        ohos:bottom_margin="14vp"
        ohos:text_size="25fp"
        ohos:text_alignment="vertical_center"
        ohos:background_element="#97600D1D"
        ohos:text_color="#C8FFFC00"
        />
    <Button
        ohos:id="$+id:button"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:text_size="27fp"
        ohos:text="claim"
        ohos:text_alignment="right"
        ohos:left_margin="15vp"
        ohos:bottom_margin="15vp"
        ohos:right_padding="8vp"
        ohos:left_padding="8vp"
        ohos:background_element="#97600D1D"
        ohos:text_color="#FFFFFEFC"
        />

</DirectionalLayout>