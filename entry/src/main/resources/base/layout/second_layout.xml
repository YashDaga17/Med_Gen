<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <Text
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:text="Organ Name "
        ohos:text_size="28fp"
        ohos:text_color="#9706D8F3"
        ohos:background_element="#C80E042F"
        ohos:text_font="Railway"
        ohos:top_margin="100vp"
        ohos:left_margin="15vp"
        ohos:bottom_margin="15vp"
        ohos:right_padding="15vp"
        ohos:left_padding="15vp"
        />
    <TextField
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:left_margin="5vp"
        ohos:left_padding="15vp"
        ohos:text="Eg: Kidney,Eye  "
        ohos:bottom_margin="14vp"
        ohos:text_size="25fp"
        ohos:text_alignment="vertical_center"
        ohos:background_element="#9706D8F3"
        ohos:text_color="#C80E042F"
        />
    <Text
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:text="Gender "
        ohos:text_size="28fp"
        ohos:text_color="#9706D8F3"
        ohos:background_element="#C80E042F"
        ohos:text_font="Railway"
        ohos:left_margin="15vp"
        ohos:bottom_margin="15vp"
        ohos:right_padding="15vp"
        ohos:left_padding="15vp"
        />
    <TextField
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:left_margin="5vp"
        ohos:left_padding="15vp"
        ohos:text="Male/Female "
        ohos:bottom_margin="14vp"
        ohos:text_size="25fp"
        ohos:text_alignment="vertical_center"
        ohos:background_element="#9706D8F3"
        ohos:text_color="#C80E042F"
        />
    <Text
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:text="Blood Type "
        ohos:text_size="28fp"
        ohos:text_color="#9706D8F3"
        ohos:background_element="#C80E042F"
        ohos:text_font="Railway"
        ohos:left_margin="15vp"
        ohos:bottom_margin="15vp"
        ohos:right_padding="15vp"
        ohos:left_padding="15vp"
        />
    <TextField
        ohos:id="$+id:name_text_field"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:left_margin="5vp"
        ohos:left_padding="15vp"
        ohos:text="Eg: B+ve,B-ve "
        ohos:bottom_margin="14vp"
        ohos:text_size="25fp"
        ohos:text_alignment="vertical_center"
        ohos:background_element="#9706D8F3"
        ohos:text_color="#C80E042F"
        />
    <Text
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:text="Age "
        ohos:text_size="28fp"
        ohos:text_color="#9706D8F3"
        ohos:background_element="#C80E042F"
        ohos:text_font="Railway"
        ohos:left_margin="15vp"
        ohos:bottom_margin="15vp"
        ohos:right_padding="15vp"
        ohos:left_padding="15vp"
        />
    <TextField
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:left_margin="5vp"
        ohos:left_padding="15vp"
        ohos:text="Enter Your Age "
        ohos:bottom_margin="14vp"
        ohos:text_size="25fp"
        ohos:text_alignment="vertical_center"
        ohos:background_element="#9706D8F3"
        ohos:text_color="#C80E042F"
        />
    <Text
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:text="Previous Health Issues  "
        ohos:text_size="28fp"
        ohos:text_color="#9706D8F3"
        ohos:background_element="#C80E042F"
        ohos:text_font="Railway"
        ohos:left_margin="15vp"
        ohos:bottom_margin="15vp"
        ohos:right_padding="15vp"
        ohos:left_padding="15vp"
        />
    <TextField
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:left_margin="5vp"
        ohos:left_padding="15vp"
        ohos:text="Any kind of medication  "
        ohos:bottom_margin="14vp"
        ohos:text_size="25fp"
        ohos:text_alignment="vertical_center"
        ohos:background_element="#9706D8F3"
        ohos:text_color="#C80E042F"
        />
    <Text
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:text="Name of Hospital "
        ohos:text_size="28fp"
        ohos:text_color="#9706D8F3"
        ohos:background_element="#C80E042F"
        ohos:text_font="Railway"
        ohos:left_margin="15vp"
        ohos:bottom_margin="15vp"
        ohos:right_padding="15vp"
        ohos:left_padding="15vp"
        />
    <TextField
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:left_margin="5vp"
        ohos:left_padding="15vp"
        ohos:text="Enter Hospital Name   "
        ohos:bottom_margin="14vp"
        ohos:text_size="25fp"
        ohos:text_alignment="vertical_center"
        ohos:background_element="#9706D8F3"
        ohos:text_color="#C80E042F"
        />
    <Button
        ohos:id="$+id:button"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:text_size="27fp"
        ohos:text="Donate"
        ohos:text_alignment="right"
        ohos:left_margin="15vp"
        ohos:bottom_margin="15vp"
        ohos:right_padding="8vp"
        ohos:left_padding="8vp"
        ohos:background_element="#C80E042F"
        ohos:text_color="#FFFFFEFC"
        />


</DirectionalLayout>